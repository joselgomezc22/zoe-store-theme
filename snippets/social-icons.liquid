{%- liquid

  if hover_color == blank
    assign hover_color = fill_color
  endif

-%}
<ul class="social-icons__wrapper">
  {% if settings.facebook_url != blank %}
    <li>
      <a href="{{ settings.facebook_url }}" target="_blank" aria-label="Facebook">
        {% render 'snip-icons',
           wrapper: wrapper,
           type: 'social',
           icon: 'facebook',
           classes: 'share-icons--icon',
           size: '14px',
           fill: fill_color,
           hover: hover_color %}
      </a>
    </li>
  {% endif %}
  {% if settings.instagram-id != blank %}
    <li>
      <a href="//instagram.com/{{ settings.instagram-id }}" target="_blank" aria-label="Instagram">
        {% render 'snip-icons',
           wrapper: wrapper,
           type: 'social',
           icon: 'instagram',
           classes: 'share-icons--icon',
           size: '14px',
